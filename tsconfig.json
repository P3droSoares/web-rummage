{
  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@interfaces/*": ["./interfaces/*"],
      "@modules/*": ["./modules/*"],
      "@core/*": ["./core/*"],
      "@dtos/*": ["./dtos/*"]
    },    
  }
}
